---
// src/components/LineSection.astro
const lineUrl = "https://line.me/R/ti/p/strait0317jabiru";
---

<div class="container mx-auto px-4 py-10">
  <div class="max-w-2xl mx-auto p-6 md:p-8 bg-green-50 border border-green-200 rounded-3xl text-center shadow-sm">
    <p class="text-xs md:text-sm font-bold text-slate-700 mb-4 tracking-tighter md:tracking-wider whitespace-nowrap">
      ＼ スマホからならLINEがスムーズ！ ／
    </p>
    
    <a 
      href={lineUrl} 
      target="_blank" 
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center bg-[#06C755] hover:bg-[#05b34c] text-white font-bold 
             py-4 px-4 md:px-10 rounded-2xl shadow-md transition-all transform hover:-translate-y-1 active:scale-95 
             w-full md:w-auto overflow-hidden"
    >
      <img 
        src="/line.svg" 
        alt="LINE" 
        class="w-8 h-8 md:w-8 md:h-8 mr-1 md:mr-1.5 flex-shrink-0"
      />
      
      <span class="text-[14px] md:text-lg whitespace-nowrap tracking-tight md:tracking-normal">
        LINEで無料相談・見積もり
      </span>
    </a>
  </div>
</div>