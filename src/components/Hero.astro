---
// 動画と制御ボタンのみのコンポーネント
---
<section class="relative bg-black w-full overflow-hidden">
  <div class="w-full aspect-video md:h-[70vh]">
    <video
      id="hero-video"
      class="w-full h-full object-cover"
      autoplay
      muted
      loop
      playsinline
      poster="/images/hero-pc.webp"
    >
      <source src="/images/hero-sp.mp4" type="video/mp4" media="(max-width: 767px)" />
      <source src="/images/hero-pc.mp4" type="video/mp4" />
    </video>
  </div>

  <button
    id="video-toggle-btn"
    type="button"
    class="absolute top-4 right-4 z-30 px-3 py-2 rounded-full border border-white/45 bg-black/35 text-white text-xs font-semibold backdrop-blur-sm"
    aria-pressed="true" 
  >
    動画を停止する
  </button>
</section>

<script>
  const video = document.getElementById('hero-video') as HTMLVideoElement;
  const btn = document.getElementById('video-toggle-btn');

  if (video && btn) {
    const setBtnState = (isPlaying: boolean) => {
      btn.textContent = isPlaying ? '動画を停止する' : '動画を再生する';
    };
    video.addEventListener('play', () => setBtnState(true));
    video.addEventListener('pause', () => setBtnState(false));
    btn.addEventListener('click', () => {
      video.paused ? video.play() : video.pause();
    });
  }
</script>